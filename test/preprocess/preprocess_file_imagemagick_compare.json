[
    {
        "name": "preprocess asset camera.jpg with imagemagick compare against itsefl (should pass)",
        "request": {
            // load static file
            "server_url": "{{ datastore "local_url" }}",
            "endpoint": "camera.jpg",
            "method": "GET",
            "header": {
                "Accept-Encoding": "gzip"
            }
        },
        "response": {
            "format": {
                "pre_process": {
                    "cmd": {
                        "name": "compare",
                        "args": [
                            "-metric",
                            "AE",
                            "-fuzz",
                            "2%",
                            "-",
                            {{ file_path "../_res/assets/camera.jpg" | marshal }},
                            "/dev/null"
                        ],
                        "output": "stderr"
                    }
                }
            },
            "body": 0
        }
    },
    {
        "name": "preprocess asset camera.jpg with imagemagick compare against a different one (should fail)",
        "request": {
            // load static file
            "server_url": "{{ datastore "local_url" }}",
            "endpoint": "camera.jpg",
            "method": "GET"
        },
        "response": {
            "format": {
                "pre_process": {
                    "cmd": {
                        "name": "compare",
                        "args": [
                            "-metric",
                            "AE",
                            "-fuzz",
                            "2%",
                            "-",
                            {{ file_path "../_res/assets/berlin.jpg" | marshal }},
                            "/dev/null"
                        ],
                        "output": "stderr"
                    }
                }
            },
            "body": 0
        },
        "reverse_test_result": true
    }
]