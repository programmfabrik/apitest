[
    {{ range $idx, $offset := int_range 0 (datastore "max_entries") }}
    {{ if gt $idx 0 }}, {{ end }}
        {
            "name": "Poll 'test' proxy store, offset {{ $offset }}",
            "request": {
                "server_url": "{{ datastore "req_base_url" }}",
                "endpoint": "proxyread/test",
                "method": "GET",
                "query_params": {
                    "offset": {{ $offset }}
                }
            },
            "response": {
                "header": {
                    "X-Request-Method": ["POST"],
                    "X-Request-Path": ["/proxywrite/test?some=value"],
                    "X-Request-Query": ["some=value"],
                    "X-Request-X-Some": ["x-header"],
                    "X-Proxy-Store-Count": ["{{ add (datastore "max_entries") 1 }}"],
                    "X-Proxy-Store-Next-Offset": ["{{ add $offset 1 }}"]
                },
                "body": {
                    "some": [
                        "body", "here"
                    ],
                    "index": "idx_{{ $offset }}"
                }
            }
        }
    {{ end }}
    ,{
        "name": "Poll 'test' proxy store for binary content (image)",
        "request": {
            "server_url": "{{ datastore "req_base_url" }}",
            "endpoint": "proxyread/test",
            "method": "GET",
            "query_params": {
                "offset": "{{ datastore "max_entries" }}"
            }            
        },
        "response": {
            "header": {
                "X-Request-Method": ["POST"],
                "X-Request-Path": ["/proxywrite/test"],
                "X-Proxy-Store-Count": ["{{ add (datastore "max_entries") 1 }}"],
                "X-Proxy-Store-Next-Offset": ["0"]
            },
            "format": {
                "type": "binary"
            },
            "body": {
                "md5sum": {{ md5sum "@../_res/assets/camera.jpg" | marshal }}
            }
        }
    },
    {{ range $idx, $offset := int_range 0 (datastore "max_entries") }}
    {{ if gt $idx 0 }}, {{ end }}
        {
            "name": "Poll 'test2' proxy store, offset {{ $offset }}",
            "request": {
                "server_url": "{{ datastore "req_base_url" }}",
                "endpoint": "proxyread/test2",
                "method": "GET",
                "query_params": {
                    "offset": {{ $offset }}
                }
            },
            "response": {
                "header": {
                    "X-Request-Method": ["GET"],
                    "X-Request-Path": ["/proxywrite/test2?is=here&my=data_{{ $offset }}&some=value"],
                    "X-Request-Query": ["is=here&my=data_{{ $offset }}&some=value"],
                    "X-Request-X-Some": ["x-header"],
                    "X-Proxy-Store-Count": ["{{ datastore "max_entries" }}"],
                    {{ $nextOffset := add $offset 1 }}
                    {{ if gt $nextOffset (subtract 1 (datastore "max_entries")) }}
                        {{ $nextOffset = 0 }}
                    {{ end }}
                    "X-Proxy-Store-Next-Offset": ["{{ $nextOffset }}"]
                }
            }
        }
    {{ end }}
]